{
  "version": 2,
  "builds": [
    {
      "src": "/backend/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "/frontend/index.html",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/backend/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/frontend/$1"
    }
  ]
}
